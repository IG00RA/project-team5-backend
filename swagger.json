          "400": {
            "description": "No token provided",
            "content": {}
          },
          "401": {
            "description": "Unauthorized (invalid access token)",
            "content": {}
          }
        }
      }
    },
    "/api/user/change-profile": {
      "patch": {
        "tags": ["User"],
        "summary": "Change user info",
        "parameters": [],
        "requestBody": {
